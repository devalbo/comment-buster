{
  "name": "comment-buster",
  "displayName": "comment-buster",
  "description": "Find sections of commented out code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:comment-buster.helloWorld"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
				{
					"id": "testView",
					"name": "Comment Buster TV"
				},
        {
          "id": "commentBuster",
          "name": "Comment Buster XP"
        }
      ],
      "commentBusterPanel": [
        {
          "id": "commentBusterPanel",
          "name": "Comment Buster Panel"
        }
      ]
    },
    "viewsContainers": {
      "panel": [
        {
					"id": "commentBusterPanel",
          "title": "Comment Buster Panel",
          "icon": "resources/light/edit.svg"
				}
      ]
    },
    "commands": [
      {
        "command": "comment-buster.helloWorld",
        "title": "Bust Comments"
      },
      {
        "command": "comment-buster.refreshCommentBuster",
        "title": "Refresh Comments for Bustin'"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/lodash": "^4.14.187",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.72.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
